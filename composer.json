{
    "name": "ringa/realpath",
    "description": "a realpath() implementation allowing non-exist paths.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^0.12.64"
    },
    "autoload": {
        "files": [
            "src/realpath.php"
        ]
    },
    "scripts": {
        "unit-test": ["vendor/bin/phpunit -c phpunit.xml"],
        "analyse": ["vendor/bin/phpstan analyse src tests --level 5"]
